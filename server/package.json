{
  "name": "server",
  "version": "1.0.0",
  "description": "This is an Andela Bootcamp 30 project. WeConnect is a business listing and out sourcing web application.",
  "main": "app.js",
  "scripts": {
    "test": "nyc --reporter=html --reporter=text mocha --timeout 500000 --compilers js:babel-core/register server/specs/",
    "start:dev": "nodemon --watch server --exec babel-node -- app.js",
    "build": "babel server -d server/dist --copy-files --ignore server/dist",
    "postinstall": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PascalUlor/WeConnect.git"
  },
  "author": "Pascal Ulor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PascalUlor/WeConnect/issues"
  },
  "homepage": "https://github.com/PascalUlor/WeConnect#readme",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-react": "^7.7.0",
    "nodemon": "^1.17.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "coveralls": "^3.0.0",
    "express": "^4.16.2",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.9.0",
    "nyc": "^11.4.1",
    "validator": "^9.4.1"
  }
}
